{
  "lerna": "3.15.0",
  "packages": [
    "docs",
    "packages/components/*",
    "packages/manager/apps/*",
    "packages/manager/core/*",
    "packages/manager/modules/*",
    "packages/manager/tools/*",
    "packages/manager-react-components"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--access public"]
    },
    "publish": {
      "conventionalCommits": true
    },
    "version": {
      "allowBranch": "master",
      "ignoreChanges": ["packages/manager-react-components/**"]
    }
  }
}
