{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "types/**"],
      "outputLogs": "new-only"
    },
    "test": {},
    "dev": {
      "dependsOn": ["^dev"]
    },
    "dev:server": {
      "persistent": true,
      "dependsOn": ["^dev"]
    }
  }
}
