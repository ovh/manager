{
  "$schema": "https://turbo.build/schema.json",
  "daemon": false,
  "cacheDir": "node_modules/.cache/turbo",
  "globalDependencies": [
    "{workspaceRoot}/yarn.lock",
    "{workspaceRoot}/pnpm-lock.yaml"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "types/**"],
      "outputLogs": "new-only",
      "env": ["VERSION", "VITE_WP_LABEU_ENTRY_POINT"]
    },
    "test": {
      "dependsOn": ["^test", "@ovh-ux/manager-static-analysis-kit#build"],
      "outputLogs": "new-only",
      "outputs": []
    },
    "dev": {
      "dependsOn": ["^dev"],
      "outputs": ["dist/**", "types/**"]
    },
    "dev:watch": {
      "dependsOn": ["^dev:watch"],
      "outputs": ["dist/**", "types/**"]
    },
    "start": {
      "persistent": true,
      "cache": false,
      "env": [
        "CONTAINER",
        "LABEU",
        "LABEU_HOST",
        "local2API",
        "REGION",
        "VERSION",
        "VITE_CONTAINER_APP",
        "VITE_WP_LABEU_ENTRY_POINT"
      ],
      "dependsOn": ["^dev"]
    },

    "lint": {
      "outputs": [],
      "outputLogs": "new-only",
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "package.json",
        "{workspaceRoot}/.eslintrc*",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/.stylelintrc*",
        "{workspaceRoot}/.stylelintignore",
        "{workspaceRoot}/.htmlhintrc*",
        "{workspaceRoot}/.remarkrc*",
        "{workspaceRoot}/.remarkignore"
      ]
    },
    "lint:fix": {
      "outputs": [],
      "outputLogs": "new-only",
      "dependsOn": ["^build"],
      "inputs": [
        "src/**",
        "package.json",
        "{workspaceRoot}/.eslintrc*",
        "{workspaceRoot}/.eslintignore",
        "{workspaceRoot}/.stylelintrc*",
        "{workspaceRoot}/.stylelintignore",
        "{workspaceRoot}/.htmlhintrc*",
        "{workspaceRoot}/.remarkrc*",
        "{workspaceRoot}/.remarkignore"
      ]
    }
  }
}
