{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/{{moduleType}}-strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/public/*": [
        "./public/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist",
    "resolveJsonModule": true,
    "noEmit": false,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "declarationDir": "./dist/types"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "resolveFullExtension": ".js"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "public/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "**/__tests__"
  ]
}
