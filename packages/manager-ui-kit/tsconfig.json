{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": ["./src/*"],
      "@/setupTest": ["./setupTest.tsx"]
    }
  },
  "files": ["global.d.ts", "setupTest.tsx"],
  "include": ["src/**/*", "*.spec.tsx", ".storybook/i18n.ts", "**/*.json"],
  "exclude": ["./src/**/*.stories.*"]
}
