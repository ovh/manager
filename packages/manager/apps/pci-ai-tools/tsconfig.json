{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react",
  "compilerOptions": {
    "types": [
      "vite/client",
      "node",
      "vitest/globals",
      "@testing-library/jest-dom"
    ],
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "src",
    "src/**/*.json",
    "public/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ]
}
