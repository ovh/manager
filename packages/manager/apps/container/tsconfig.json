{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react",
  "compilerOptions": {
    "baseUrl": ".",
    "types": [
      "vite/client",
      "node",
      "vite-plugin-svgr/client"
    ],
    "resolveJsonModule": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "allowJs": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "src",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "src/__tests__"
  ]
}
