{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "noEmit": true,
    "target": "es2020",
    "types": ["vite/client", "node"],
    "module": "ES2020",
    "moduleResolution": "node",
    "removeComments": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/public/*": ["./public/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx"
  ]
}
