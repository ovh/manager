{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react",
  "compilerOptions": {
    "outDir": "dist",
    "allowJs": true,
    "paths": {
      "@/public/*": [
        "./public/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "baseUrl": "."
  },
  "include": [
    "src",
    "public/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types",
  ]
}
