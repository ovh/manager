{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react",
  "compilerOptions": {
    "types": ["vite/client", "node"],
    "module": "ES2020",
    "removeComments": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "types", "src/__tests__"]
}
