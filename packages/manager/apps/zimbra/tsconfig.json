{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/public/*": [
        "./public/*"
      ],
      "@/*": [
        "./src/*"
      ]
    },
    "outDir": "dist",
    "allowJs": true
  },
  "include": [
    "src",
    "public/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types"
  ]
}