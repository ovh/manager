{
  "root": true,
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "plugins": ["angular"],
  "env": {
    "browser": true,
    "jasmine": true,
    "mocha": true,
    "jquery": true,
    "angular/mocks": true
  },
  "globals": {
    "_": true,
    "__WEBPACK_REGION__": true,
    "$": true,
    "angular": true,
    "d3": true,
    "inject": true,
    "JSURL": true,
    "moment": true,
    "RFB": true,
    "Terminal": true,
    "URI": true,
    "Util": true,
    "validator": true,
    "WebUtil": true
  },
  "rules": {
    "no-bitwise": ["error", { "allow": ["~"] }]
  }
}
