{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react",
  "compilerOptions": {
    "outDir": "dist",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/public/*": ["./public/*"],
      "@/*": ["./src/*"]
    },
    "allowJs": true
  },
  "include": ["src", "public/**/*.json", "src/__mocks__/**/*.json"],
  "exclude": ["node_modules", "dist", "types", "src/__tests__"]
}
