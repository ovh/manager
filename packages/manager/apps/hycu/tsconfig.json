{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "target": "ES2020",
    "types": ["vite/client", "node", "jest"],
    "module": "ESNext",
    "outDir": "dist",
    "allowJs": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react-jsx"
  },

  "files": ["global.d.ts"],
  "include": ["src/**/*", "*.spec.tsx"],
  "exclude": ["./src/**/*.stories.*"]
}
