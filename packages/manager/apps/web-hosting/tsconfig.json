{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react",
  "compilerOptions": {
    "types": ["vite/client", "node"],
    "outDir": "dist",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "paths": {
      "@/public/*": ["./public/*"],
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
   "include": [
    "src",
    "public/translations/**/*.json"
  ],
  "exclude": ["node_modules", "dist", "types", "src/__tests__"]
}
