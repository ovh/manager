import React from 'react';
import { useTranslation } from 'react-i18next';
import { Navigate, Outlet } from 'react-router-dom';
import { useQuery } from '@tanstack/react-query';
import { getListingIceberg, } from '@/api';
import Datagrid from '@/components/layout-helpers/Listing/dataGrid';
import '@ovhcloud/ods-theme-blue-jeans/index.css';

function ServiceList({ data }: any) {
  const { t } = useTranslation('{{appName}}/listing');
  const count = data?.length;

  if (count === 0) return <Navigate to="onboarding" />;
  if (count === 1) {
    return (
      <>
        <Outlet />
        <Navigate to={data[0].serviceName} />
      </>
    );
  }
  return (
    <>
      <h2>{t('title')}</h2>
      <Datagrid data={data} />
    </>
  );
}

export default function Listing() {
  const { data, isError, isLoading } = useQuery(
    ['services'],
    getListingIceberg,
  );

  if (isLoading) {
    return <p>Loading...</p>;
  }

  if (isError) {
    return <Navigate to="onboarding" />;
  }

  return <ServiceList data={data} />;
}

