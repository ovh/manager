import React, { Suspense } from 'react';
import { useTranslation } from 'react-i18next';
import { useParams, useResolvedPath } from 'react-router-dom';
import { useQueries } from '@tanstack/react-query';
import Breadcrumb, {
  BreadcrumbHandleParams,
} from '@/components/Breadcrumb/Breadcrumb';
import { {{dashboardEndpoint}}, {{dashboardEndpoint}}ServiceInfos, {{dashboardEndpoint}}QueryKey, {{dashboardEndpoint}}ServiceInfosQueryKey } from '@/api';
import Dashboard from '@/components/layout-helpers/Dashboard/Dashboard';
import Loading from '@/components/Loading/Loading';
import ErrorBanner from '@/components/Error/Error';

export function breadcrumb({ params }: BreadcrumbHandleParams) {
  return params.serviceName;
}

export default function DashboardPage() {
  const { t } = useTranslation('{{appName}}/dashboard');
  const { serviceName } = useParams();
  const results: any = useQueries({
    queries: [
      { queryKey: [{{dashboardEndpoint}}QueryKey({ serviceName })], queryFn: () => {{dashboardEndpoint}}({ serviceName }), staleTime: Infinity, },
      { queryKey: [{{dashboardEndpoint}}ServiceInfosQueryKey({ serviceName })], queryFn: () => {{dashboardEndpoint}}ServiceInfos({ serviceName }), staleTime: Infinity, },
    ],
  });

  const tabsList = [
    {
      name: 'general_infos',
      title: t('general_informations'),
      to: useResolvedPath('').pathname,
    },
    {
      name: 'custom tab',
      title: 'custom tab',
      to: useResolvedPath('Tabs2').pathname,
    },
  ];

  if (results[0].status === 'success' && results[0]?.data?.status !== 200) {
    return <ErrorBanner error={results[0].data} />;
  }

  return (
    <div>
      <Breadcrumb />
      <Suspense fallback={<Loading />}>
        <Dashboard tabs={tabsList} />
      </Suspense>
    </div>
  );
}
