{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "es2020"],
    "module": "ES2020",
    "moduleResolution": "Node",
    "removeComments": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "__tests__", "*.js"]
}
