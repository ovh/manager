{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react-strict",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "declarationDir": "./dist/types"
  },
  "include": [
    "src",
    "src/**/*.json",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "src/__tests__"
  ]
}
