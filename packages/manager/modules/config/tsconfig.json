{
  "compilerOptions": {
    "target": "es5",
    "moduleResolution": "Node",
    "lib": ["dom"],
    "module": "commonjs",
    "removeComments": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "allowJs": true,
    "declaration": true,
    "declarationDir": "types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "types"]
}
