{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react-strict",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "allowJs": false,
    "resolveJsonModule": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "declarationDir": "./dist/types"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "**/__tests__",
    "src/**/*.spec.ts"
  ]
}
