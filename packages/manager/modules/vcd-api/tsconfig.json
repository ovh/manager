{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "es2021"],
    "target": "es2021",
    "types": ["vite/client", "node", "jest"],
    "module": "ES2020",
    "outDir": "dist",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react-jsx",
    "paths": {
      "axios": ["node_modules/axios"],
      "@tanstack/table-core": ["node_modules/@tanstack/table-core"],
      "@types/react": ["node_modules/@types/react"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "types",
    "**/__tests__",
    "src/**/*.spec.ts"
  ]
}
