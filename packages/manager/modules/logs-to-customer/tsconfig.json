{
  "extends": "@ovh-ux/manager-static-analysis-kit/tsconfig/react-strict",
  "compilerOptions": {
    "rootDir": "src",
    "noEmit": false,
    "resolveJsonModule": true,
    "outDir": "dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "declarationDir": "./dist/types"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.json"
  ],
  "exclude": ["node_modules", "dist", "types"]
}
