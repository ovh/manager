{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "target": "ES2020",
    "types": ["vite/client", "node", "jest"],
    "module": "ESNext",
    "outDir": "dist",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "isolatedModules": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "jsx": "react-jsx"
  },
  "exclude": ["node_modules", "dist", "types", "**/__tests__", "*.spec.ts"]
}
